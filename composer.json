{
    "name": "xy2z/lite-config",
    "description": "A lightweight PHP static class with zero dependencies.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "xy2z",
            "email": "xy2z@pm.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "xy2z\\LiteConfig\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "1.*"
    },
    "autoload-dev": {
        "psr-4": {
            "xy2z\\LiteConfigTests\\": "tests/"
        }
    },
	"scripts": {
		"test": "vendor/bin/phpunit tests --testdox",
		"analyze": "vendor/bin/phpstan analyze -c phpstan.neon"
	},
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/xy2z"
		}
	]
